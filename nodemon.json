{
  "delay": "5000",
  "restartable": "rs",
  "ignore": [
    ".git",
    "tmp/**",
    "tools/*",
    "tools/**",
    "tools/**/**",
    "t.js",
    "t?.js",
    "package.json",
    "package-lock.json",
    "node_modules/**"
  ],
  "verbose": true,
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": [
    ".",
    "bin/www"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,json"
}
